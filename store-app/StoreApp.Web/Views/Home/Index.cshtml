@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        <vc:categories-list />
    </div>
    <div class="col-md-9">

        @if (Model.Products.Count() == 0)
        {
            <p>No products found</p>
        }

        @foreach (var product in Model.Products)
        {
            <div class="card card-outline-secondary mb-2 p-2">
                <div class="d-flex justify-content-between">
                    <div>
                        <h2>@product.Name</h2>
                        <p>@product.Description</p>
                    </div>
                    <div class="">
                        <p class="badge rounded-pill text-bg-success">@product.Price</p>
                    </div>
                </div>
                <form asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="@product.Id" name="Id">
                    <button type="submit" class="btn btn-outline-success btn-sm pull-right" style="float:right;">Sepete
                        Ekle</button>
                </form>
            </div>
        }

        @if (Model.PageInfo.TotalPages > 1)
        {
            <div page-model="@Model.PageInfo" page-action="Index" page-class="btn" page-class-link="btn-outline-dark"
                page-class-active="btn-dark" class="btn-group my-2"></div>
        }
    </div>
</div>
